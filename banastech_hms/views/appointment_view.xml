        <record model="ir.ui.view" id="view_banastech_hms_appointment_kanban">
            <field name="name">banastech.hms.appointment.kanban</field>
            <field name="model">banastech.hms.appointment</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="patient_id" />
                    <field name="image" />
                    <field name="date" />
                    <field name="doctor_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_tags_section oe_kanban_partner_categories" />
                                <div class="o_kanban_image">
                                    <img class="oe_kanban_image" t-att-src="kanban_image('banastech.hms.patient','image',record.image)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_heading">
                                        <field name="patient_id" />
                                        <br/>
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <li t-if="record.doctor_id.raw_value">
                                            <b>Doctor:</b>
                                            <field name="doctor_id" />
                                        </li>
                                        <li t-if="record.department_id.raw_value">
                                            <b>Department:</b>
                                            <field name="department_id" />
                                        </li>
                                        <li t-if="record.date.raw_value">
                                            <b>Date:</b>
                                            <field name="date" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_banastech_hms_appointment_tree" model="ir.ui.view">
            <field name="name">banastech.hms.appointment.tree</field>
            <field name="model">banastech.hms.appointment</field>
            <field name="arch" type="xml">
                <tree multi_edit="1">
                    <field name="name" string="Appointment" />
                    <field name="purpose_id" />
                    <field name="patient_id" />
                    <field name="date" />
                    <field name="department_id" />
                    <field name="consultation_type" />
                    <!-- <field name="no_invoice" string="Invoice Exempt" /> -->
                    <field name="state" widget="badge"
                                        decoration-success="state== 'done'"
                                        decoration-primary="state in('confirm')"
                                        decoration-warning="state== 'draft'"
                                        decoration-info="state== 'in_consultation'"/>
                    <!-- <field name="date_start" invisible="1"/> -->
                    <!-- <field name="date_end" invisible="1"/> -->
                    <!-- <field name="waiting_duration" widget="web_time_counter" attrs="{'invisible': ['|',('date_start', '=', False),('state','=','cancel')]}" optional="hide"/> -->
                </tree>
            </field>
        </record>

        <record id="view_banastech_hms_appointment_form" model="ir.ui.view">
            <field name="name">banastech.hms.appointment.form</field>
            <field name="model">banastech.hms.appointment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="appointment_confirm"
                            states="draft"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"/>
                        <button name="appointment_waiting"
                            states="confirm,draft"
                            type="object"
                            string="Waiting"
                            class="oe_highlight"/>
                        <button name="appointment_consultation"
                            states="waiting"
                            type="object"
                            string="In Consultation"
                            class="oe_highlight"/>
                        <button name="action_move_out_invoice_type"
                            string="Create Invoice"
                            states="draft"
                            type="object"
                            class="oe_highlight"
                            context="{'default_patient_id': active_id}"
                            attrs="{'invisible': [('invoice_id', '!=', False)]}"
                            invisible="1"/>
                        <button name="appointment_done"
                            states="invoiced,in_consultation"
                            type="object"
                            string="Done"
                            class="oe_highlight"/>
                        <button name="appointment_cancle"
                            states="confirm,waiting,in_consultation,invoiced,invoice_exempt"
                            type="object"
                            string="Cancle"
                            class="oe_highlight"/>
                        <button name="appointment_draft"
                            string="Reset To Draft"
                            states="done,cancel"
                            type="object"
                            class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,waiting,in_consultation"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" >
                            <button name="view_invoice" type="object" class="oe_stat_button" attrs="{'invisible': [('invoice_count', '&lt;=', 0)]}" icon="fa-edit" groups="account.group_account_invoice">
                                <div class="o_stat_info">
                                    <field name="invoice_count" class="o_stat_value" />
                                    <span class="o_stat_text">Invoices</span>
                                </div>
                            </button>
                            <button name="view_prescription" type="object" class="oe_stat_button" icon="fa-edit" attrs="{'invisible': [('presc_count', '&lt;=', 0)]}">
                                <div class="o_stat_info">
                                    <field name="presc_count" class="o_stat_value" />
                                    <span class="o_stat_text">Prescriptions</span>
                                </div>
                            </button>
                        </div>
                        <field name="image" widget='image' class="oe_avatar" />
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Appointment Id"/>
                            </h1>
                        </div>
                        <notebook name="appointment_note">
                            <page name="info" string="Appointment">
                                <group>
                                    <group>
                                        <field name="patient_id" attrs="{'readonly': [('state', '!=', 'draft')]}" readonly="context.get('make_readonly', False)"/>
                                        <field name="age" />
                                        <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <!-- <field name="company_id" groups="base.group_multi_company" attrs="{'readonly': [('state', '!=', 'draft')]}"/> -->
                                        <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="duration" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="invoice_id" invisible="1"/>
                                        <field name="purpose_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </group>
                                    <group>
                                        <field name="doctor_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="urgency" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="consultation_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="product_id" context="{'default_type':'service','default_hospital_product_type':'consulatation'}" required="0" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <!-- <field name="no_invoice" attrs="{'readonly': [('state', '!=', 'draft')]}"/> -->
                                    </group>
                                </group>
                                <group string="Follow Up#" attrs="{'invisible': [('state', '!=', 'in_consultation'),('state', '!=', 'done')]}">
                                    <group>
                                        <field name="reason_id" attrs="{'readonly': [('state', '!=', 'draft'),('state', '!=', 'in_consultation')]}"/>
                                        <field name="follow_date" attrs="{'readonly': [('state', '!=', 'draft'),('state', '!=', 'in_consultation')]}"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <separator string="Chief Complaints" colspan="4" />
                                <field name="chief_complain" colspan="4" nolabel="1"
                                    placeholder="Chief Complaints..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <separator string="History of Present Illness"
                                    colspan="4" />
                                <field name="present_illness" colspan="4" nolabel="1"
                                    placeholder="History of Present Illness..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <separator string="Past History" colspan="4" />
                                <field name="past_history" colspan="4" nolabel="1"
                                    placeholder="Past History..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <separator string="Notes" colspan="4" />
                                <field name="notes" colspan="4" nolabel="1" placeholder="Notes..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </page>
                            <page name="clinical_ass" string="Clinical Assesment">
                                <br />
                                <notebook name="examination">
                                    <page string="General Examination">
                                        <group>
                                            <group>
                                                <field name="weight" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="temp" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="hr" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </group>
                                           <group>
                                                <field name="rr" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="bp" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="spo2" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </group>
                                        </group>
                                    </page>
                                    <page string="Systemic Examination">
                                        <separator string="Per Abdominal" colspan="4" />
                                        <field name="per_abdominal" colspan="4" nolabel="1"
                                            placeholder="Per Abdominal..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <separator string="External Genitals" colspan="4" />
                                        <field name="external_genitals" colspan="4" nolabel="1"
                                            placeholder="External Genitals..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <separator string="P/R Examination" colspan="4" />
                                        <field name="per_rectal" colspan="4" nolabel="1"
                                            placeholder="P/R Examination..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <separator string="P/V Examination" colspan="4" />
                                        <field name="per_vaginal" colspan="4" nolabel="1"
                                            placeholder="P/V Examination..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <separator string="Respiratory Syncytial" colspan="4" />
                                        <field name="rs" colspan="4" nolabel="1" placeholder="R/S..." attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                        <separator string="C.V.S" colspan="4" />
                                        <field name="cvs" colspan="4" nolabel="1" placeholder="C.V.S..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <separator string="C.N.S" colspan="4" />
                                        <field name="cns" colspan="4" nolabel="1" placeholder="C.N.S..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <separator string="Back Spine" colspan="4" />
                                        <field name="back_spine" colspan="4" nolabel="1"
                                            placeholder="Back Spine..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <separator string="Peripheral Pulsation" colspan="4" />
                                        <field name="peripheral_pulsation" colspan="4" nolabel="1"
                                            placeholder="Peripheral Pulsation..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <separator string="Notes" colspan="4" />
                                        <field name="notess" colspan="4" nolabel="1"
                                            placeholder="Notes..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </page>
                                    <page string="Investigation">
                                        <group>
                                            <group string="Blood Tests">
                                                <field name="s_creatinine" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="bi_sugar" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="cbc" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="blood_group" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="spsa" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="electrolytes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="others" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </group>
                                            <group string="Radiological">
                                                <field name="usg_abdomen_kub" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="x_ray_kub" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="mcu" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="ct_scan" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="renal_scan" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="bone_scan" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </group>
                                        </group>
                                        <group string="Laboratory">
                                            <field name="urine_reports" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        </group>
                                        <group string="Others">
                                            <field name="otherss" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        </group>
                                    </page>
                                </notebook>
                            </page>
                            <page name="advice" string="D/D &amp; Advice">
                                <separator string="Differential Diagnosis" colspan="4" />
                                <field name="differencial_diagnosis" colspan="4" nolabel="1"
                                    placeholder="Differential Diagnosis..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <separator string="Medical Advice" colspan="4" />
                                <field name="medical_advice" colspan="4" nolabel="1"
                                    placeholder="Medical Advice..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <separator string="Notes" colspan="4" />
                                <field name="advice_notes" colspan="4" nolabel="1"
                                    placeholder="Notes..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </page>
                            <page name='diseases' string="Diseases">
                                <separator string="Past Medical History" colspan="4" />
                                <field name="medical_history" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <separator string="Diseases History" colspan="4" />
                                <field name="patient_diseases" nolabel="1" colspan="4" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"
                               groups="base.group_user"></field>
                        <field name="activity_ids"></field>
                        <field name="message_ids" widget="mail_thread"></field>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_banastech_hms_appointment_search" model="ir.ui.view">
            <field name="name">banastech.hms.appointment.search</field>
            <field name="model">banastech.hms.appointment</field>
            <field name="arch" type="xml">
                <search string="Search Appointment Today">
                    <field name="name" />
                    <field name="patient_id"/>
                    <filter name="today" string="Today" domain="[('date', '&gt;=', time.strftime('%Y-%m-%d 00:00:00')),('date', '&lt;=', time.strftime('%Y-%m-%d 23:59:59')),('state','!=','draft'),('state','!=','confirm')]"/>
                    <separator/>
                </search>
            </field>
        </record>

        <record id="action_banastech_hms_appointment" model="ir.actions.act_window">
            <field name="name">Appointment</field>
            <field name="res_model">banastech.hms.appointment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context"></field>
            <field name="domain"></field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first appointment!
                </p>
            </field>
        </record>
</odoo>