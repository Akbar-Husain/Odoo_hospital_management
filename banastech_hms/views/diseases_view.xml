<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="view_banas_hms_medicament_flavour_tree" model="ir.ui.view">
            <field name="name">banas.hms.medicament.flavour.tree</field>
            <field name="model">banas.hms.medicament.flavour</field>
            <field name="arch" type="xml">
                <tree string="HMS Medicines Flavours">
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="view_banas_hms_medicament_flavour_form" model="ir.ui.view">
            <field name="name">banas.hms.medicament.flavour.form</field>
            <field name="model">banas.hms.medicament.flavour</field>
            <field name="arch" type="xml">
                <form string="HMS Medicines Flavours">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_banas_hms_medicament_flavour_search" model="ir.ui.view">
            <field name="name">banas.hms.medicament.flavour.search</field>
            <field name="model">banas.hms.medicament.flavour</field>
            <field name="arch" type="xml">
                <search string="HMS Medicines Flavours">
                    <field name="name" />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_banas_hms_medicament_flavour">
            <field name="name">HMS Medicines Flavour</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banas.hms.medicament.flavour</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record id="view_banas_hms_diseases_tree" model="ir.ui.view">
            <field name="name">banas.hms.diseases.tree</field>
            <field name="model">banas.hms.diseases</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="HMS Diseases">
                    <field name="name" />
                    <field name="code"/>
                    <field name="category" />
                </tree>
            </field>
        </record>
        <record id="view_banas_hms_diseases_form" model="ir.ui.view">
            <field name="name">banas.hms.diseases.form</field>
            <field name="model">banas.hms.diseases</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="HMS Diseases">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="category" />
                            </group>
                        </group>
                        <group colspan="4" string="Extra Info">
                            <field name="info" nolabel="1" colspan="4" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_banas_hms_diseases_search" model="ir.ui.view">
            <field name="name">banas.hms.diseases.search</field>
            <field name="model">banas.hms.diseases</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="HMS Diseases">
                    <field name="category" />
                    <field name="code" />
                    <field name="name" />
                    <field name="protein" />
                    <field name="gene" />
                    <field name="chromosome" />
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Main Category" name="category" domain="[]" context="{'group_by':'category'}" />
                        <filter string="Extra Info" name="info" domain="[]" context="{'group_by':'info'}" />
                        <filter string="Code" name="code" domain="[]" context="{'group_by':'code'}" />
                        <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Protein involved" name="protein" domain="[]" context="{'group_by':'protein'}" />
                        <filter string="Gene" name="gene" domain="[]" context="{'group_by':'gene'}" />
                        <filter string="Affected Chromosome" name="chromosome" domain="[]" context="{'group_by':'chromosome'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_banas_hms_diseases_view">
            <field name="name">Diseases</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banas.hms.diseases</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="search_view_id" ref="view_banas_hms_diseases_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_banas_hms_diseases_view_form">
            <field name="act_window_id" ref="act_open_banas_hms_diseases_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_banas_hms_diseases_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_banas_hms_diseases_view_tree">
            <field name="act_window_id" ref="act_open_banas_hms_diseases_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_banas_hms_diseases_tree" />
        </record>

        <!-- Diseases Category Views -->
        
        <record id="view_banas_hms_diseases_category_tree" model="ir.ui.view">
            <field name="name">banas.hms.diseases.category.tree</field>
            <field name="model">banas.hms.diseases.category</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="HMS Diseases Category">
                    <field name="name" />
                    <field name="parent_id" />
                </tree>
            </field>
        </record>
        <record id="view_banas_hms_diseases_category_form" model="ir.ui.view">
            <field name="name">banas.hms.diseases.category.form</field>
            <field name="model">banas.hms.diseases.category</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="HMS Diseases Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                            <group>
                                <field name="parent_id" />
                            </group>
                        </group>
                    </sheet>
                    <newline />
                </form>
            </field>
        </record>
        <record id="view_banas_hms_diseases_category_search" model="ir.ui.view">
            <field name="name">banas.hms.diseases.category.search</field>
            <field name="model">banas.hms.diseases.category</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="HMS Diseases Category">
                    <field name="name" />
                    <field name="parent_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Category Name" name="name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Parent Category" name="parent_id" domain="[]" context="{'group_by':'parent_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_banas_hms_disease_category_view">
            <field name="name">Disease Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banas.hms.diseases.category</field>
            <field name="view_mode">form</field>
            <field name="search_view_id" ref="view_banas_hms_diseases_category_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_banas_hms_disease_category_view_form">
            <field name="act_window_id" ref="act_open_banas_hms_disease_category_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_banas_hms_diseases_category_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_banas_hms_disease_category_view_tree">
            <field name="act_window_id" ref="act_open_banas_hms_disease_category_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_banas_hms_diseases_category_tree" />
        </record>

        <menuitem id="banas_hms_diseases_menu"
            name="Diseases"
            parent="banastech_hms.menu_banas_hms_configuration"
            sequence="2" />

            <menuitem id="banas_hms_diseases"
                name="Diseases"
                action="act_open_banas_hms_diseases_view"
                parent="banastech_hms.banas_hms_diseases_menu"
                sequence="0" />
            <menuitem id="menu_disease_category"
                name="Disease Categories"
                sequence="1"
                parent="banastech_hms.banas_hms_diseases_menu"
                action="act_open_banas_hms_disease_category_view" />

        <menuitem id="menu_banas_hms_medicament_flavour"
            name="Medicament Flavour"
            parent="banastech_hms.banas_hms_medicaments_conf_menu"
            action="action_banas_hms_medicament_flavour"
            sequence="3" />
</odoo>