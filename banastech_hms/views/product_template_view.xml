<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="patient_product_template_tree" model="ir.ui.view">
            <field name="name">product.template.tree</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Patient Registration">
                    <field name="product_id" />
                </tree>
            </field>
        </record>


        <record id="patient_product_template_form" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form string="Patient Registration">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" />
                                <!-- domain="[('hospital_product_type','=','consultation')]" -->
                                <!-- attrs="{'invisible': [('is_product_id', '!=', True)], 'required': [('is_product_id', '=', True)]}" -->
                            </group>
                            <group>
                                <field name="name" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record> 
        
        <record id="action_patient_product_template" model="ir.actions.act_window">
            <field name="name">Invoice Registration</field>
            <field name="res_model">product.template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a Invoice Registration.
                </p>
            </field>
        </record>

        <menuitem id="menu_product_template"
            name="Registration Fee"
            parent="menu_banas_hms_configuration"
            action="action_patient_product_template"
            sequence="5"/>
</odoo>