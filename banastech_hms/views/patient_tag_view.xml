<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_banastech_hms_patient_tag_tree" model="ir.ui.view">
            <field name="name">banastech.hms.patient.tag.tree</field>
            <field name="model">banastech.hms.patient.tag</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="color" widget="color_picker"/> 
                    <field name="active"/>        
                </tree>
            </field>
        </record> 

        <record id="view_banastech_hms_patient_tag_form" model="ir.ui.view">
            <field name="name">banastech.hms.patient.tag.form</field>
            <field name="model">banastech.hms.patient.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>  
                                <field name="color" widget="color_picker"/>
                                <field name="color_2" widget="color" groups="base.group_no_one"/>
                                <field name="active" widget="boolean_toggle"/>         
                            </group>
                        </group>
                    </sheet> 
                </form>       
            </field>
        </record> 

        <record id="action_banastech_hms_patient_tag" model="ir.actions.act_window">
            <field name="name">Patient Tags</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banastech.hms.patient.tag</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your tag here!
                </p>
            </field>
        </record>

        <menuitem id="banastech_hms_patient_tag_menu" 
            name= "Tags"
            action= "action_banastech_hms_patient_tag"
            parent= "menu_banas_hms_configuration"
            sequence= "0"/>
</odoo>