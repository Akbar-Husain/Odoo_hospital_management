<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="view_banas_hms_doctor_referring_tree" model="ir.ui.view">
            <field name="name">banas.hms.referring.doctor.tree</field>
            <field name="model">banas.hms.referring.doctor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="mobile" />
                    <field name="email" optional="show" />
                </tree>
            </field>
        </record>

        <record id="view_banas_hms_doctor_referring_form" model="ir.ui.view">
            <field name="name">banas.hms.referring.doctor.form</field>
            <field name="model">banas.hms.referring.doctor</field>
            <field name="arch" type="xml">
                <form string="Doctor">
                    <sheet>
                        <group>
                            <group>                              
                                <field name="name" />
                                <field name="email" widget="email" />
                                <field name="website" widget="url" />
                            </group>
                            <group>
                                <field name="phone" placeholder="e.g. +506 5555 5555" />
                                <field name="mobile" />
                                <field name="refer_type" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Addresses">
                                <group>
                                    <group>
                                        <span class="o_form_label o_td_label" name="address">
                                            <b>Address</b>
                                        </span>
                                        <div class="o_address_format">
                                            <field name="street" placeholder="Street..." class="o_address_street"/>
                                            <field name="city_id" placeholder="City" class="o_address_city"/>
                                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}" />
                                            <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                            <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                                        </div>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_banas_hms_doctor_referring_search" model="ir.ui.view">
            <field name="name">banas.hms.referring.doctor.search</field>
            <field name="model">banas.hms.referring.doctor</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                </search>
            </field>
        </record>

        <record id="action_banas_hms_referring_doctor" model="ir.actions.act_window">
            <field name="name">Referring Doctor</field>
            <field name="res_model">banas.hms.referring.doctor</field>
            <field name="view_mode">tree,form,search</field>
            <field name="context">{}</field>
        </record>

</odoo>