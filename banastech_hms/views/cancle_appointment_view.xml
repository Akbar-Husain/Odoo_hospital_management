<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="view_banas_hms_cancle_appointment_form" model="ir.ui.view">
            <field name="name">banas.hms.cancle.appointment.form</field>
            <field name="model">banas.hms.cancle.appointment</field>
            <field name="arch" type="xml">
                <form>
                	<group>
                		<group>
                			<field name="appointment_id"/>
                            <field name="reason"/>
                		</group>
                		<group>
                		</group>
                	</group>
                    <footer>
                        <button name="action_cancle_btn" string="Cancle Appointment" type="object" class="btn-primary"/>
                        <button name="cancle_btn" string="Discard" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_banas_hms_cancle_appointment" model="ir.actions.act_window">
            <field name="name">Cancle Appointment</field>
            <field name="res_model">banas.hms.cancle.appointment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>