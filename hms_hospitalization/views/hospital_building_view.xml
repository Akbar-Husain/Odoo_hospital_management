<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_hospital_building_form" model="ir.ui.view">
            <field name="name">banastech.hms.building.form</field>
            <field name="model">banastech.hms.building</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="HMS Building">
                    <sheet>
                        <group>
                            <group>
                                <field name="code" />
                                <field name="name" />
                            </group>
                            <group>
                                <field name="institution" />
                                <field name="extra_info" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_hospital_building_tree" model="ir.ui.view">
            <field name="name">banastech.hms.building.tree</field>
            <field name="model">banastech.hms.building</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="HMS Building">
                    <field name="code" />
                    <field name="institution" />
                    <field name="name" />
                    <field name="extra_info" />
                </tree>
            </field>
        </record>
        <record id="view_hospital_building_search" model="ir.ui.view">
            <field name="name">banastech.hms.building.search</field>
            <field name="model">banastech.hms.building</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="HMS Building">
                    <field name="code" />
                    <field name="institution" />
                    <field name="name" />
                    <field name="extra_info" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Code" name="code" domain="[]" context="{'group_by':'code'}" />
                        <filter string="Institution" name="institution" domain="[]" context="{'group_by':'institution'}" />
                        <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Extra Info" name="extra_info" domain="[]" context="{'group_by':'extra_info'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_hospital_building_view">
            <field name="name">Hospital Departments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banastech.hms.building</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hospital_building_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_hospital_building_view_form">
            <field name="act_window_id" ref="act_open_hospital_building_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hospital_building_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_hospital_building_view_tree">
            <field name="act_window_id" ref="act_open_hospital_building_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_hospital_building_tree" />
        </record>
    </data>
</odoo>