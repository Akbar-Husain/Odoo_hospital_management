<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_bed_tree" model="ir.ui.view">
            <field name="name">bed.tree</field>
            <field name="model">banastech.hms.bed</field>
            <field name="arch" type="xml">
                <tree string="Bed Tree">
                    <field name="name" />
                    <field name="product_id" />
                    <field name="bed_type" />
                    <field name="telephone" />
                    <field name="state"/>
                    <field name="ward_id"/>
                    <field name="notes" />
                </tree>
            </field>
        </record>
        <record id="view_bed_form" model="ir.ui.view">
            <field name="name">bed.form</field>
            <field name="model">banastech.hms.bed</field>
            <field name="arch" type="xml">
                <form string="Bed Form">
                    <sheet>
                        <notebook>
                            <page string="General Information">
                                <group>
                                    <group>
                                        <field name="name" required="True" />
                                        <field name="telephone" />
                                        <field name="ward_id" required="True" />
                                    </group>
                                    <group>
                                        <field name="product_id" domain="[('hospital_product_type','=','bed')]" />
                                        <field name="bed_type" />
                                        <field name="state" required="True" />
                                    </group>
                                </group>
                                <field name="notes" nolabel="1" placeholder="Notes..." />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="bed_search" model="ir.ui.view">
            <field name="name">bed.search</field>
            <field name="model">banastech.hms.bed</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Bed Search">
                    <field name="name" />
                    <field name="telephone" />
                    <field name="ward_id" />
                    <field name="notes" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Ward" name="ward_id" domain="[]" context="{'group_by':'ward_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_bed" model="ir.actions.act_window">
            <field name="name">Beds</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banastech.hms.bed</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="bed_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>

