<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       <!-- Ethnicity view -->
        <record id="view_banastech_hms_ethnicity_tree" model="ir.ui.view">
            <field name="name">banastech.hms.ethnicity.tree</field>
            <field name="model">banastech.hms.ethnicity</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Banastech HMS Ethnicity">
                    <field name="notes" />
                    <field name="code" />
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="view_banastech_hms_ethnicity_form" model="ir.ui.view">
            <field name="name">banastech.hms.ethnicity.form</field>
            <field name="model">banastech.hms.ethnicity</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Banastech HMS Ethnicity">
                    <group><group>
                    <field name="notes" />
                    <field name="name" />
                    </group><group>
                    <field name="code" />
                    </group></group>
                </form>
            </field>
        </record>
        <record id="view_banastech_hms_ethnicity_search" model="ir.ui.view">
            <field name="name">banastech.hms.ethnicity.search</field>
            <field name="model">banastech.hms.ethnicity</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Banastech HMS Ethnicity">
                    <field name="notes" />
                    <field name="code" />
                    <field name="name" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter name="notes" string="Notes" domain="[]" context="{'group_by':'notes'}" />
                        <filter name="code" string="Code" domain="[]" context="{'group_by':'code'}" />
                        <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_banastech_hms_ethnicity_view">
            <field name="name">Banastech HMS Ethnicity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banastech.hms.ethnicity</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_banastech_hms_ethnicity_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_banastech_hms_ethnicity_view_form">
            <field name="act_window_id" ref="act_open_banastech_hms_ethnicity_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_banastech_hms_ethnicity_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_banastech_hms_ethnicity_view_tree">
            <field name="act_window_id" ref="act_open_banastech_hms_ethnicity_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_banastech_hms_ethnicity_tree" />
        </record>

        <!-- Vaccination view -->

        <record model="ir.ui.view" id="view_banastech_hms_vaccination_tree">
            <field name="name">banastech.hms.vaccination.tree</field>
            <field name="model">banastech.hms.vaccination</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Banastech HMS Vaccination">
                    <field name="name" />
                    <field name="vaccine_lot" />
                    <field name="patient_id" />
                    <field name="vaccine" />
                    <field name="dose" />
                    <field name="observations" />
                    <field name="date" />
                    <field name="institution" />
                    <field name="next_dose_date" />
                </tree>
            </field>
        </record>
        <record id="view_banastech_hms_vaccination_form" model="ir.ui.view">
            <field name="name">banastech.hms.vaccination.form</field>
            <field name="model">banastech.hms.vaccination</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Banastech HMS Vaccination">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="vaccine_lot" />
                                <field name="patient_id" />
                                <field name="vaccine" />
                                <field name="dose" />
                                <field name="observations" />
                                <field name="date" />
                                <field name="institution" />
                                <field name="next_dose_date" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_banastech_hms_vaccination_search" model="ir.ui.view">
            <field name="name">banastech.hms.vaccination.search</field>
            <field name="model">banastech.hms.vaccination</field>
            <field name="arch" type="xml">
                <search string="Banastech HMS Vaccination">
                    <field name="name" />
                    <field name="vaccine_lot" />
                    <field name="patient_id" />
                    <field name="vaccine" />
                    <field name="dose" />
                    <field name="observations" />
                    <field name="date" />
                    <field name="institution" />
                    <field name="next_dose_date" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter name="vaccine_lot" string="Lot Number" domain="[]" context="{'group_by':'vaccine_lot'}" />
                        <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}" />
                        <filter name="patient_id" string="Patient" domain="[]" context="{'group_by':'patient_id'}" />
                        <filter name="vaccine" string="Vaccine" domain="[]" context="{'group_by':'vaccine'}" />
                        <filter name="dose" string="Dose #" domain="[]" context="{'group_by':'dose'}" />
                        <filter name="observations" string="Observations" domain="[]" context="{'group_by':'observations'}" />
                        <filter name="date" string="Date" domain="[]" context="{'group_by':'date'}" />
                        <filter name="institution" string="Institution" domain="[]" context="{'group_by':'institution'}" />
                        <filter name="next_dose_date" string="Next Dose" domain="[]" context="{'group_by':'next_dose_date'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_banastech_hms_vaccination_view">
            <field name="name">Banastech HMS Vaccination</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banastech.hms.vaccination</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_banastech_hms_vaccination_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_banastech_hms_vaccination_view_form">
            <field name="act_window_id" ref="act_open_banastech_hms_vaccination_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_banastech_hms_vaccination_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_banastech_hms_vaccination_view_tree">
            <field name="act_window_id" ref="act_open_banastech_hms_vaccination_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_banastech_hms_vaccination_tree" />
        </record>
        <menuitem id="menu_hms_vacc_apagen" name="Vaccination" parent="banastech_hms.menu_banas_hms_configuration" action="act_open_banastech_hms_vaccination_view" sequence="15" />

        <record id="view_patient_form_prescription" model="ir.ui.view">
            <field name="name">patient.form</field>
            <field name="model">banastech.hms.patient</field>
            <field name="inherit_id" ref="banastech_hms.view_banastech_hms_patient_form"/>
            <field name="arch" type="xml">
                <button name="action_open_banastech_hms_appointment" position="after">
                    <button name="action_prescription" type="object" class="oe_stat_button" icon="fa-edit" attrs="{'invisible': [('presc_count', '&lt;=', 0)]}">
                    <!-- groups="hms.group_hms_jr_doctor,hms.group_hms_pharmacist" -->
                        <div class="o_stat_info">
                            <field name="presc_count" class="o_stat_value" />
                            <span class="o_stat_text">Prescriptions</span>
                        </div>
                    </button>
                </button>
                <field name="blood_group" position='after'>
                    <field name="ethnic_group" invisible="1" />
                </field>
            </field>
        </record>
