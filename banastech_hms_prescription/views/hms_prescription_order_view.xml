<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_banastech_hms_prescription_order_tree" model="ir.ui.view">
            <field name="name">prescription.order.tree</field>
            <field name="model">prescription.order</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Banastech HMS Prescription Order">
                    <field name="prescription_date" />
                    <field name="name" />
                    <field name="patient_id" />
                    <field name="doctor_id" />
                </tree>
            </field>
        </record>

        <record id="view_banastech_hms_prescription_order_form" model="ir.ui.view">
            <field name="name">prescription.order.form</field>
            <field name="model">prescription.order</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Banastech HMS Prescription Order">
                    <header>
                        <button name="action_sale_order"
                            states="prescription"
                            string="Create Sale Order"
                            type="object"/>
                        <button name="action_purchase_order"
                            string="Create Purchase Order"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'prescription')]}"
                            groups="base.group_user"
                            invisible="1"/>
                        <button name="button_confirm"
                            states="draft"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"/>
                        <button name="button_reset"
                            states="prescription"
                            string="Reset to Draft"
                            type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,prescription,so_created" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- <button name="action_view_invoice" class="oe_stat_button" icon="fa-user" type="object" help="Review Prescription Invoice" attrs="{'invisible': [('state', '!=', 'invoiced')]}" string="View Invoice"/> -->
                            <button name="action_view_sale" string="View Sale Order" class="oe_stat_button" icon="fa-user" type="object" help="View Prescription Sale Order" attrs="{'invisible': [('state', 'not in', ('invoiced','so_created'))]}"/>
                            <button name="action_view_purchase" class="oe_stat_button" icon="fa-user" type="object" attrs="{'invisible': [('state', 'not in', ('invoiced','po_created'))]}" string="View Purchase order" />
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                                <field name="company_id" />
                                <field name="patient_age" invisible="1" />
                                <field name="doctor_id" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                                <field name="doc_user_prescription" invisible="1" />
                                <field name="pharmacy" invisible="1" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                                <field name="warehouse_id" options="{'no_create': True}" /> <!--groups="stock.group_locations" -->
                                <field name="group_id" domain="[('doctor_id','=',doctor_id)]" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                                <field name="prescription_date" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                            </group>
                            <group>
                                <field name="pathology" invisible="1" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                                <field name="appointment" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                                <field name="created_by" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                                <field name="creation_date" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                                <field name="pregnancy_warning" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                               <field name="language"/>
                               <field name="picking_type_id" invisible="0" />
                               <field name="sale_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="prescription_line" nolabel="1" colspan="4" attrs="{'readonly': [('state', '=', 'so_created')]}">
                                <tree string="" editable="top">
                                    <field name="product_id" string="Medicine Name"/>
                                    <field name="active_component_ids" widget="many2many_tags"/>
                                    <field name="allow_substitution" />
                                    <!-- <field name="dose_unit" invisible="1" /> -->
                                    <field name="common_dosage" required="1" />
                                    <field name="days" />
                                    <field name="quantity" required="1" string="Qty" />
                                </tree>
                                <form string="">
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="active_component_ids" widget="many2many_tags" />
                                            <field name="form" />
                                            <field name="start_treatment" />
                                            <field name="dose" />
                                            <field name="common_dosage" />
                                        </group>
                                        <group>
                                            <field name="indication"/>
                                            <field name="allow_substitution"/>
                                            <field name="route" invisible="1" />
                                            <field name="end_treatment" />
                                            <!-- <field name="dose_unit" /> -->
                                        </group>
                                        <group>
                                            <field name="duration"/>
                                            <field name="duration_period"/>
                                            <field name="review"/>
                                            <field name="quantity"/>
                                            <field name="short_comment"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group>
                            <field name="notes" attrs="{'readonly': [('state', '=', 'so_created')]}" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="view_banastech_hms_prescription_order_search" model="ir.ui.view">
            <field name="name">prescription.order.search</field>
            <field name="model">prescription.order</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Banastech HMS Prescription Order">
                    <field name="name" />
                    <field name="prescription_date" />
                    <field name="patient_id" />
                    <field name="pregnancy_warning" />
                    <field name="pharmacy" />
                    <field name="prescription_warning_ack" />
                    <field name="doctor_id" />
                    <field name="notes" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter name="patient_id" string="Patient" domain="[]" context="{'group_by':'patient_id'}" />
                        <filter name="pregnancy_warning" string="Pregancy Warning" domain="[]" context="{'group_by':'pregnancy_warning'}" />
                        <filter name="notes" string="Prescription Notes" domain="[]" context="{'group_by':'notes'}" />
                        <filter name="pharmacy" string="Pharmacy" domain="[]" context="{'group_by':'pharmacy'}" />
                        <filter name="prescription_date" string="Prescription Date" domain="[]" context="{'group_by':'prescription_date'}" />
                        <filter name="prescription_warning_ack" string="Prescription verified" domain="[]" context="{'group_by':'prescription_warning_ack'}" />
                        <filter name="doctor_id" string="Prescribing Doctor" domain="[]" context="{'group_by':'doctor_id'}" />
                        <filter name="name" string="Prescription ID" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Today's Prescription" name="today" domain="[('create_date','&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('create_date','&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="view_banastech_hms_prescription_order_kanban">
            <field name="name">prescription.order.kanban</field>
            <field name="model">prescription.order</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey">
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_vignette oe_semantic_html_override">
                                    <div class="oe_kanban_details">
                                        <h3>
                                            <a type="open">
                                                <field name="name" />
                                            </a>
                                        </h3>
                                        <ul>
                                            <li t-if="record.prescription_date.raw_value">
                                                <b>Date:</b>
                                                <field name="prescription_date" />
                                            </li>
                                            <li t-if="record.patient_id.raw_value">
                                                <b>Patient:</b>
                                                <field name="patient_id" />
                                            </li>
                                            <li t-if="record.doctor_id.raw_value">
                                                <b>Doctor:</b>
                                                <field name="doctor_id" />
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_banastech_hms_prescription_order_view">
            <field name="name">Prescription Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">prescription.order</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_banastech_hms_prescription_order_search" />
            <field name="view_id" ref="view_banastech_hms_prescription_order_tree" />
            <field name="domain">[]</field>
            <field name="context">{'search_default_today': 1}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_hms_prescription_order_view_form">
            <field name="act_window_id" ref="act_open_banastech_hms_prescription_order_view" />
            <field name="sequence" eval="30" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_banastech_hms_prescription_order_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_hms_prescription_order_view_tree">
            <field name="act_window_id" ref="act_open_banastech_hms_prescription_order_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_banastech_hms_prescription_order_tree" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_hms_prescription_order_view_kanban">
            <field name="act_window_id" ref="act_open_banastech_hms_prescription_order_view" />
            <field name="sequence" eval="25" />
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_banastech_hms_prescription_order_kanban" />
        </record>

    </data>
</odoo>