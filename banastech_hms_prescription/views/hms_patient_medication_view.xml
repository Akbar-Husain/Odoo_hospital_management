<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_banastech_hms_patient_medication_tree" model="ir.ui.view">
            <field name="name">banastech.hms.patient.medication.tree</field>
            <field name="model">banastech.hms.patient.medication</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Banastech HMS Patient Medication">
                    <field name="patient_id" />
                    <field name="doctor" />
                    <field name="adverse_reaction" />
                    <field name="notes" />
                    <field name="is_active" />
                    <field name="course_completed" />
                    <field name="template" />
                    <field name="discontinued_reason" />
                    <field name="discontinued" />
                </tree>
            </field>
        </record>
        <record id="view_banastech_hms_patient_medication_form" model="ir.ui.view">
            <field name="name">banastech.hms.patient.medication.form</field>
            <field name="model">banastech.hms.patient.medication</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Banastech HMS Patient Medication">
                    <field name="patient_id" />
                    <field name="doctor" />
                    <field name="adverse_reaction" />
                    <field name="notes" />
                    <field name="is_active" />
                    <field name="course_completed" />
                    <field name="template" />
                    <field name="discontinued_reason" />
                    <field name="discontinued" />
                </form>
            </field>
        </record>
        <record id="view_banastech_hms_patient_medication_search" model="ir.ui.view">
            <field name="name">banastech.hms.patient.medication.search</field>
            <field name="model">banastech.hms.patient.medication</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Banastech HMS Patient Medication">
                    <field name="patient_id" />
                    <field name="doctor" />
                    <field name="adverse_reaction" />
                    <field name="notes" />
                    <field name="is_active" />
                    <field name="course_completed" />
                    <field name="template" />
                    <field name="discontinued_reason" />
                    <field name="discontinued" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter name="patient_id" string="Patient" domain="[]" context="{'group_by':'patient_id'}" />
                        <filter name="doctor" string="Doctor" domain="[]" context="{'group_by':'doctor'}" />
                        <filter name="adverse_reaction" string="Adverse Reactions" domain="[]" context="{'group_by':'adverse_reaction'}" />
                        <filter name="notes" string="Extra Info" domain="[]" context="{'group_by':'notes'}" />
                        <filter name="is_active" string="Active" domain="[]" context="{'group_by':'is_active'}" />
                        <filter name="course_completed" string="Course Completed" domain="[]" context="{'group_by':'course_completed'}" />
                        <filter name="template" string="Medication Template" domain="[]" context="{'group_by':'template'}" />
                        <filter name="discontinued_reason" string="Reason for discontinuation" domain="[]" context="{'group_by':'discontinued_reason'}" />
                        <filter name="discontinued" string="Discontinued" domain="[]" context="{'group_by':'discontinued'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_banastech_hms_patient_medication_view">
            <field name="name">Banastech HMS Patient Medication</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banastech.hms.patient.medication</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_banastech_hms_patient_medication_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_hms_patient_medication_view_form">
            <field name="act_window_id" ref="act_open_banastech_hms_patient_medication_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_banastech_hms_patient_medication_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_hms_patient_medication_view_tree">
            <field name="act_window_id" ref="act_open_banastech_hms_patient_medication_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_banastech_hms_patient_medication_tree" />
        </record>
    </data>
</odoo>